<core:FragmentDefinition 
    xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog confirm="sort">
		<sortItems>
			<ViewSettingsItem text="{i18n>productName}" key="ProductName" selected="true"/>
			<ViewSettingsItem text="{i18n>quantityPerUnit}" key="QuantityPerUnit"/>
			<ViewSettingsItem text="{i18n>unitPrice}" key="UnitPrice"/>
			<ViewSettingsItem text="{i18n>unitsInStock}" key="UnitsInStock"/>
			<ViewSettingsItem text="{i18n>unitsOnOrder}" key="UnitsOnOrder"/>
		</sortItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>