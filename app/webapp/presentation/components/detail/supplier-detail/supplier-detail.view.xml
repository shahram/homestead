<mvc:View 
	controllerName="de.jlabs..presentation.components.detail.supplier-detail.supplier-detail" 
	height="100%"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:form="sap.ui.layout.form"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:layout="sap.ui.layout"
	xmlns:ui="sap.ca.ui"
	xmlns:l="sap.ui.layout" displayBlock="true">
	<grid:CSSGrid>
		<grid:customLayout>
			<grid:GridResponsiveLayout layoutChange="onLayoutChange">
				<grid:layoutS>
					<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 8rem)" gridAutoRows="5rem" gridRowGap="1rem" gridColumnGap="1rem">
					</grid:GridSettings>
				</grid:layoutS>
				<grid:layout>
					<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 12rem)" gridAutoRows="5rem" gridRowGap="1rem" gridColumnGap="1rem">
					</grid:GridSettings>
				</grid:layout>
				<grid:layoutXL>
					<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 20rem)" gridAutoRows="5rem" gridRowGap="1rem" gridColumnGap="1rem">
					</grid:GridSettings>
				</grid:layoutXL>
			</grid:GridResponsiveLayout>
		</grid:customLayout>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>address}" />
			<Text text="{detail>/supplier/address}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>city}" />
			<Text text="{detail>/supplier/city}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>companyName}" />
			<Text text="{detail>/supplier/companyName}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>contactName}" />
			<Text text="{detail>/supplier/contactName}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>contactTitle}" />
			<Text text="{detail>/supplier/contactTitle}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>country}" />
			<Text text="{detail>/supplier/country}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>fax}" />
			<Text text="{detail>/supplier/fax}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>homePage}" />
			<Text text="{detail>/supplier/homePage}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>phone}" />
			<Text text="{detail>/supplier/phone}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>phone}" />
			<Text text="{detail>/supplier/phone}" />
		</VBox>
		<VBox class="sapUiMediumMarginTop">
			<Title text="{i18n>postalCode}" />
			<Text text="{detail>/supplier/region}" />
		</VBox>
	</grid:CSSGrid>
</mvc:View>